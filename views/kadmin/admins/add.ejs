<%- include('../layout/header'); %>
<div class="page-content">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">Home</a>
            </li>
            <li>
                <a href="#">Form Elements</a>
            </li>
            <li class="active">Form Layouts</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Header -->
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                Forms
                <small>
                    <i class="fa fa-angle-right"></i>
                    Layouts
                </small>
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
    <!-- /Page Header -->
    <!-- Page Body -->
    <div class="page-body" id="PageBody">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <h5 class="row-title before-pink"><i class="fa fa-expand pink"></i>Add User</h5>
                    <div class="widget">
                        <div class="widget-header bordered-top bordered-palegreen">
                            <span class="widget-caption">Add User</span>
                        </div>
                        <div class="widget-body">
                            <div class="collapse in">
                                <form role="form" method="post" enctype="application/x-www-form-urlencoded">
                                    <input type="hidden" class="form-control" name="" value="">
                                    <div class="form-group">
                                        <label >User Name</label>
                                        <input type="text" class="form-control" name="adm_name" value="" placeholder="user name">
                                    </div>
                                    <div class="form-group">
                                        <label >User Account (*)</label>
                                        <input type="text" class="form-control" name="adm_account" value="" placeholder="user account">
                                    </div>
                                    <div class="form-group">
                                        <label >User Password (*)</label>
                                        <input type="text" class="form-control" name="adm_pass" value="" placeholder="user pass">
                                    </div>
                                    <div class="form-group">
                                        <label >User Password 2 (*)</label>
                                        <input type="text" class="form-control" name="adm_pass2" value="" placeholder="user pass">
                                    </div>
                                    <div class="form-group">
                                        <label>Group</label>
                                        <select name="adm_group" id="e1" style="width:100%;">
                                            <option value="1" />Level 1</option>
                                            <option value="2" />Level 2</option>
                                            <option value="3" />Level 3</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            <input class="checkbox-slider" name="adm_status" type="checkbox">
                                            <span class="text">Ẩn/Hiện</span>
                                        </label>
                                    </div>
                                    <!--<button type="submit" class="btn btn-blue">Submit</button>-->
                                    <input type="submit" value="submit" name="submit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Body -->
</div>
<%- include('../layout/footer'); %>